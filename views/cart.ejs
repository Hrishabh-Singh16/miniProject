<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cart</title>
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css"/>
</head>
<body>
    <section class="navbar">
        <div class="logo">
            <h2>The Grand Ãˆclat</h2>
        </div>
        <div class="nav-btn">
            <a href=""><i class="fa-solid fa-user-large"></i><%= cusData.name %></a>
        </div>
    </section>
    <section class="main">
        <div class="address">
            <h2>Address</h2>
        </div>
        <div class="cart">
            <p><i class='bx bx-cart'></i>Cart Items</p>
            <div class="">
                <div class="cartItemContainer">
                    <% for(item of cart) {%>
                        <div class="cartItems">
                            <div class="itemName">
                                <% if(item.itemId.type == "Veg") {%>
                                    <i class='bx bx-food-tag' style="color: green;"></i>
                                <% }else{ %>
                                    <i class='bx bx-food-tag' style="color: red;"></i>
                                <% } %>
                                <p><%= item.itemId.itemName %></p>
                                <br>
                                <p></p>
                            </div>
                            <div class="quantity">
                                <div>
                                    <div class="minBtn">
                                        <form action="/cart/s/<%= cusData.id %>/<%= item._id %>?_method=PUT" method="post">
                                            <button type="submit"><i class='bx bx-minus' ></i></button>
                                        </form>
                                    </div>
                                    <h3><%= item.quantity %></h3>
                                    <div class="plusBtn">
                                        <form action="/cart/p/<%= cusData.id %>/<%= item._id %>?_method=PUT" method="post">
                                            <button type="submit"><i class='bx bx-plus' ></i></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="itemPrice">
                                <span class="actualPrice">&#8377;<%= item.quantity*item.itemId.price %></span>
                                <p>&#8377;<%= Math.ceil(item.quantity*(item.itemId.price - item.itemId.price*(item.itemId.discount/100))) %></p>
                            </div>
                        </div>
                    <% } %>
                    <div class="billDetails">
                        <p>Bill Details</p>
                        <table>
                            <tbody>
                                <tr>
                                    <td>Item Total</td>
                                    <td>&#8377;1450</td>
                                </tr>
                                <tr>
                                    <td>Platform Fee</td>
                                    <td>&#8377;10</td>
                                </tr>
                                <tr>
                                    <td>S.G.S.T.</td>
                                    <td>&#8377;18</td>
                                </tr>
                                <tr>
                                    <td>C.G.S.T.</td>
                                    <td>&#8377;19</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="total">
                    <p>TO PAY</p>
                    <p>&#8377;1560</p>
                </div>
            </div>
        </div>
    </section>
</body>
</html>